<div class="jumbotron">
     <h3>Awesome! You have <%= @leadsrd.count %> Lead(s) ready to go.</h3>
     <p>Now you can pick up who you want to submit to Salesforce. </p>
     <p>If you are just interested in the current Salesforce Leads list you can check that out by clicking on the button below.</p>
     <p><a class="btn btn-primary btn-lg" id="btnselectall" href="/leadsforce" role="button">View Current Leads</a></p>
</div>
  <div>
    <%= form_tag("/salesforce", method: "post") do %>
    <p>
      <button class="btn btn-primary btn-lg" id="addNew" type="button" data-toggle="modal" data-target="#myModal" role="button">New Lead</button>
      <button class="btn btn-primary btn-lg" id="submit" type="submit" role="button">Submit to Salesforce</button>
    </p>
    <table class="table table-striped">
      <tr>
        <th><%= check_box_tag 'selectall', -1%></th>
        <th>Id</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>E-Mail</th>
        <th>Company</th>
        <th>Job Title</th>
        <th>Phone</th>
        <th>WebSite</th>
        <th>Status</th>
        <th></th>
      </tr>
    <% @leadsrd.each do |l| %>
    <tr>
      <td><%= check_box_tag 'lead_id[]', l.id, false, class: 'lead-option' %></td>
      <td><%= l.id %></td>
      <td><%= l.name %></td>
      <td><%= l.last_name %></td>
      <td><%= l.email %></td>
      <td><%= l.company %></td>
      <td><%= l.job_title %></td>
      <td><%= l.phone %></td>
      <td><%= l.website %></td>
      <td><%= l.status %></td>
      <td><%= link_to "Delete", lead_path(l.id), method: "delete", :data => {:confirm => "Delete Lead?"} %></td>
    </tr>
    <% end %>
    </table>
    <% end %>
    <%= render 'home/modal_form' %>
</div>
